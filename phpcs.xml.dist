<?xml version="1.0"?>
<ruleset name="warp-core-php">
    <description>Warp Core ruleset</description>
    <arg name="colors"/>
    <arg value="sp"/>
    <config name="show_warnings" value="0"/>

    <rule ref="PSR12">
        <!-- We want to have multi-line type hints lined up -->
        <exclude name="Squiz.Functions.FunctionDeclarationArgumentSpacing.SpacingAfterHint"/>
    </rule>

    <file>./src</file>
</ruleset>
